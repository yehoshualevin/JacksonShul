<div class="row">
    <div class="col-md-5 col-md-offset-2">
        <div class="well">
            <h1 style="margin-left: 70px">New Expense</h1>
            <form method="post" action="addexpense">
                <input type="hidden" name="date" id="date" />
                <div class="form-group">
                    <label>Name:</label>
                    <input type="text" name="name" class="form-control" id="name" />
                </div>
                <div class="form-group">
                    <label>Cost Estimate:</label>
                    <input type="number" name="cost" class="form-control" id="cost" />
                </div>
                <div class="checkbox">
                        <label>
                            <input id="unavailable" type="checkbox">
                            <b>Cost Not Available</b>
                        </label>
                </div>
                <button type="submit" disabled id="submit-button" class="btn btn-primary">Add Expense</button>
            </form>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/site-scripts/add-expense.js"></script>
    }